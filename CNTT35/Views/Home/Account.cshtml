
@{
    ViewBag.Title = "Account";
}

<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Quản lí hồ sơ của bạn</h4>
            
            <div class="row">
              
                <div class="col-lg-8 col-md-6">
                    <form action="#">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Họ<span>*</span></p>
                                    <input type="text" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Tên<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Địa chỉ<span>*</span></p>
                            <input type="text" placeholder="Địa chỉ số nhà, đường phố" class="checkout__input__add">

                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Điện thoại<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                            <button type="submit" class="site-btn">THAY ĐỔI</button>
                        </div>
                    </form>
                </div>
         
                <div class="col-lg-4 col-md-6">
                    <form>
                        <div class="checkout__order">
                            <h4>Thay đổi mật khẩu</h4>
                            <div class="checkout__input">
                                <p>Mật khẩu hiện tại<span>*</span></p>
                                <input type="password" placeholder="Nhập mật khẩu hiện tại" class="checkout__input__add" required>

                            </div>
                            <div class="checkout__input">
                                <p>Mật khẩu mới<span>*</span></p>
                                <input type="password" placeholder="Nhập mật khẩu mới" class="checkout__input__add" required>

                            </div>
                            <div class="checkout__input">
                                <p>Xác nhận mật khẩu<span>*</span></p>
                                <input type="password" placeholder="Nhập lại mật khẩu mới" class="checkout__input__add" required>

                            </div>
                            <button type="submit" class="site-btn">Xác nhận</button>
                        </div>
                    </form>
                </div>
                
            </div>

        </div>
    </div>
</section>


